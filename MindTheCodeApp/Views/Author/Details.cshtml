@model MindTheCodeApp.ViewModels.AuthorVMs.AuthorDetailsVM;

@{
    ViewData["Title"] = "Author Page";
}

<div class="author-details-page-content">
    <section class="author-details-page-author-section">
        <div class="author-details-page-author-img-container">
            <img src="@Url.Content((@Model.Author?.Photo.FilePath ?? "/img/books/placeholder.png"))" alt="@Model.Author?.Name photo" />
        </div>
        <div class="author-details-page-author-details">
            <h2>@Model.Author?.Name</h2>
            <p>
                @Model.Author?.Description
            </p>
        </div>
    </section>
    <section class="author-details-page-books-container">
        <h2>Books of @Model.Author?.Name</h2>
        
        <div class="author-details-page-books">
            @foreach (var book in Model.Books)
            {
                <div class="product-card" data-id="@book.BookId">
                    <img src="@Url.Content((@book.Photo?.FilePath ?? "/img/books/placeholder.png"))"
                         alt="@book.Title cover" />

                    <a href="#" class="product-card-title">@book.Title</a>
                    <a href="#" class="product-card-author">@Model.Author?.Name</a>
                    <span class="product-card-price">€@book.Price</span>
                    <svg xmlns="http://www.w3.org/2000/svg"
                         height="24"
                         width="24"
                         class="product-card-bag-icon">
                        <path d="M6 22q-.825 0-1.412-.587Q4 20.825 4 20V8q0-.825.588-1.412Q5.175 6 6 6h2q0-1.65 1.175-2.825Q10.35 2 12 2q1.65 0 2.825 1.175Q16 4.35 16 6h2q.825 0 1.413.588Q20 7.175 20 8v12q0 .825-.587 1.413Q18.825 22 18 22Zm0-2h12V8h-2v2q0 .425-.287.712Q15.425 11 15 11t-.712-.288Q14 10.425 14 10V8h-4v2q0 .425-.287.712Q9.425 11 9 11t-.712-.288Q8 10.425 8 10V8H6v12Zm4-14h4q0-.825-.587-1.412Q12.825 4 12 4q-.825 0-1.412.588Q10 5.175 10 6ZM6 20V8v12Z" />
                    </svg>
                </div>
            }
        </div>
    </section>
</div>