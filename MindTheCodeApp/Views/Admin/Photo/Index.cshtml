@model IEnumerable<MindTheCodeApp.ViewModels.BookVMs.PhotoVM>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-controller="AdminPhoto" asp-action="UploadImage">Upload New Book</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsBook)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAuthor)
        </th>
        <th>
            <label>Image Path</label>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBook)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.PhotoId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>