@model MindTheCodeApp.ViewModels.BookVMs.PhotoVM
@{
    ViewData["Title"] = "Upload Image";
}
@Html.Partial("PartialViews/_AdminMenuPartial");

<form class="admin-page-form" method="post" enctype="multipart/form-data">
    <div class="admin-page-form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="admin-page-form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="admin-page-form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsBook" /> @Html.DisplayNameFor(model => model.IsBook)
        </label>
    </div>
    <div class="admin-page-form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsAuthor" /> @Html.DisplayNameFor(model => model.IsAuthor)
        </label>
    </div>
    <div>
        <label asp-for="ImageFile"></label>
        <input asp-for="ImageFile" type="file">
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <button type="submit">UPLOAD</button>
</form>

