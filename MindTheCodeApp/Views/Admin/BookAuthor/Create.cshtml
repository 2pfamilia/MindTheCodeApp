@using MindTheCodeApp.ViewModels.BookVMs;
@model CreateBookAuthorVM
@{
    ViewData["Title"] = "Create Author";
}

@Html.Partial("PartialViews/_AdminMenuPartial");

<div class="admin-page-content">
    <h1 class="page-title">Create new Author</h1>

        <form class="admin-page-form" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="admin-page-form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        <div class="admin-page-form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="admin-page-form-group">
                <label asp-for="PhotoId" class="control-label"></label>
                <select asp-for="PhotoId" class="form-control" asp-items="ViewBag.AuthorPhoto"></select>
            </div>
        <button type="submit" class="btn">
            CREATE
        </button>
        </form>
    <a class="admin-page-back-link link-btn-revert" asp-action="Index">BACK TO LIST</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}