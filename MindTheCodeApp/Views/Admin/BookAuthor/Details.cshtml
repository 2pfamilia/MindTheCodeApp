@model MindTheCodeApp.ViewModels.BookVMs.BookAuthorVM
@{
    ViewData["Title"] = "Author Details";
}

@Html.Partial("PartialViews/_AdminMenuPartial");

<div class="admin-page-content">
    <h1 class="page-title">Author Details</h1>
    <div class="admin-page-table">
        <header class="admin-page-table-header">
            <h4 class="width-5">ID</h4>
            <h4 class="width-15">Name</h4>
            <h4 class="width-40">Description</h4>
            <h4 class="width-40">Photo File Path</h4>
        </header>
        <div class="admin-page-table-row">
            <span class="width-5">@Html.DisplayFor(model => model.AuthorId)</span>
            <span class="width-15">@Html.DisplayFor(model => model.Name)</span>
            <span class="width-40">@Html.DisplayFor(model => model.Description)</span>
            <span class="width-40">@Html.DisplayFor(model => model.PhotoFilePath)</span>
        </div>
    </div>
    <a class="admin-page-back-link link-btn-revert" asp-action="Index">BACK TO LIST</a>
</div>