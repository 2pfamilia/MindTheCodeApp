@model MindTheCodeApp.ViewModels.OrderVMs.EditOrderVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EditOrderId"/>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Fulfilled"/> @Html.DisplayNameFor(model => model.Fulfilled)
                </label>
            </div>
            <br/>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active"/> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <br/>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Canceled"/> @Html.DisplayNameFor(model => model.Canceled)
                </label>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control"/>
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="OrderCreated" class="control-label"></label>
                <input asp-for="OrderCreated" class="form-control"/>
                <span asp-validation-for="OrderCreated" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Category</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users" value="ViewBag.Value"></select>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="AddressInformationId" class="control-label">Address</label>
                <select asp-for="AddressInformationId" class="form-control" asp-items="ViewBag.Addresses" value="ViewBag.Value"></select>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}