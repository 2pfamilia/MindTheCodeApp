@model IEnumerable<MindTheCodeApp.ViewModels.OrderVMs.IndexOrderVM>

@{
    ViewData["Title"] = "Admin - Orders";
}

@Html.Partial("PartialViews/_AdminMenuPartial");

<div class="admin-page-content">
    <h1 class="page-title">Orders</h1>
    <div class="admin-page-main-btns-container">
        <a class="link-btn" asp-action="Create">CREATE NEW ORDER</a>
    </div>

    <div class="admin-page-table">
        <header class="admin-page-table-header">
            <h4 class="width-5">ID</h4>
            <h4 class="width-15">@Html.DisplayNameFor(model => model.CustomerEmail)</h4>
            <h4 class="width-5">
                @Html.DisplayNameFor(model => model.Fulfilled)
            </h4>
            <h4 class="width-5"> @Html.DisplayNameFor(model => model.Active)</h4>
            <h4 class="width-5">
                @Html.DisplayNameFor(model => model.Cancelled)
            </h4>
           
            <h4 class="width-15">
                @Html.DisplayNameFor(model => model.Address)
            </h4>
            <h4 class="width-10">
                @Html.DisplayNameFor(model => model.Cost)
            </h4>
            <h4 class="width-15">
                @Html.DisplayNameFor(model => model.OrderCreated)
            </h4>
            <div class="width-25"></div>
        </header>
    @foreach (var item in Model)
    {
            <div class="admin-page-table-row">
                <span class="width-5">@Html.DisplayFor(modelItem => item.IndexOrderId)</span>
                <span class="width-15">@Html.DisplayFor(modelItem => item.CustomerEmail)</span>
                <span class="width-5">
                    @Html.DisplayFor(modelItem => item.Fulfilled)
                </span>
                <span class="width-5">@Html.DisplayFor(modelItem => item.Active)</span>
                <span class="width-5">
                    @Html.DisplayFor(modelItem => item.Cancelled)
                </span>                
                <span class="width-15">
                    @Html.DisplayFor(modelItem => item.Address)
                </span>
                 <span class="width-10">
                    €@Html.DisplayFor(modelItem => item.Cost)
                </span>
                <span class="width-15">
                    @Html.DisplayFor(modelItem => item.OrderCreated)
                </span>
                <div class="admin-page-table-btns-cell width-25">
                    <a class="table-link-btn" asp-action="Edit" asp-route-id="@item.IndexOrderId">Edit</a> 
                    <a class="table-link-btn" asp-action="Details" asp-route-id="@item.IndexOrderId">Details</a> 
                    <a class="table-link-btn" asp-action="Delete" asp-route-id="@item.IndexOrderId">Delete</a>
                   </div>
            </div>
    }
    </div>
</div>