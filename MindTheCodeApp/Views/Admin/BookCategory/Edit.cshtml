@model MindTheCodeApp.ViewModels.BookVMs.EditBookCategoryVM
@{
    ViewData["Title"] = "Edit";
}
@Html.Partial("PartialViews/_AdminMenuPartial");

<div class="admin-page-content">
        <form class="admin-page-form" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EditBookCategoryId"/>
            <div class="admin-page-form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" value="@Model.Code"/>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <br/>
            <div class="admin-page-form-group">
                <label asp-for="Title" class="control-label"></label>
                <textarea asp-for="Title" class="form-control" value="@Model.Title"></textarea>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <br/>
            <div class="admin-page-form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value="@Model.Description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn">SAVE</button>
        </form>
    <a class="admin-page-back-link link-btn-revert" asp-action="Index">BACK TO LIST</a>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}